{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "serverless_dist",
		"noEmit": false,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node"
		]
	},
	"include": [
		"serverless_src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}